<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_produk"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:src="@color/colorAccent" />
<RelativeLayout
    android:id="@+id/cont1"
    android:layout_below="@id/img_produk"
    android:layout_width="wrap_content"
    android:padding="16dp"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_nama_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nama Produk"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rating_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/rating" />

        <TextView
            android:id="@+id/tv_harga_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_produk"
            android:layout_marginTop="5dp"
            android:text="100.000"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_harga_produk"
            android:layout_marginTop="5dp"
            android:text="COLOUR"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_colour"
            android:layout_marginTop="5dp"
            android:text="SIZE"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_size"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAccent"
            android:text="Add To Cart"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/img_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_size"
            android:layout_toRightOf="@id/btn_add_to_cart"
            android:src="@drawable/love" />
</RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/cont1"
            android:background="#F0F0F0" />

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginTop="30dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DETAIL"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_detail_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="detail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\ndetail produk\n
detail\n produk\n"
                android:textColor="#0F0F0F" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>